                e.preventDefault();
                if (!text) return;
                $.post('/Chat/SendMessage', { chatId: chatId, text: text, replyToMessageId: replyId }, function () {
                    connection.invoke("SendMessageToChat", chatId, userId, text);
                    document.getElementById('messageInput').value = '';
