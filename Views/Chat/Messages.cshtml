            // console.log(`–û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ —Å–æ–æ–±—â–µ–Ω–∏—è ${messageId}: ${isRead ? '–ø—Ä–æ—á–∏—Ç–∞–Ω–æ' : '–Ω–µ –ø—Ä–æ—á–∏—Ç–∞–Ω–æ'}`);
            if (isRead) {
                const $status = $(`.message-bubble[data-message-id="${messageId}"] .message-status`);
                if ($status.length > 0 && $status.find('.read-status').length === 0) {
                    $status.html("<span class='read-status ms-1' title='–ü—Ä–æ—á–∏—Ç–∞–Ω–æ'><i class='bi bi-check2-all text-primary'></i></span>");
                    readStatusCache.set(messageId, true);
                    // console.log(`–ì–∞–ª–æ—á–∫–∞ –ø—Ä–æ—á—Ç–µ–Ω–∏—è –¥–æ–±–∞–≤–ª–µ–Ω–∞ –¥–ª—è —Å–æ–æ–±—â–µ–Ω–∏—è ${messageId}`);
                }
            }
        }

        $(function() {
            // console.log('–ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è —Å–∏—Å—Ç–µ–º—ã –ø—Ä–æ—á—Ç–µ–Ω–∏—è —Å–æ–æ–±—â–µ–Ω–∏–π');
            // –ü—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã —Å—Ä–∞–∑—É –∑–∞–ø—Ä–∞—à–∏–≤–∞–µ–º —Å—Ç–∞—Ç—É—Å—ã –ø—Ä–æ—á—Ç–µ–Ω–∏—è –¥–ª—è –≤—Å–µ—Ö —Å–æ–æ–±—â–µ–Ω–∏–π
            const allMessageIds = [];
            $(".message-bubble").each(function() {
                const msgId = $(this).data("message-id");
                const isMine = $(this).hasClass("my-message");
                if (isMine) {
                    allMessageIds.push(msgId);
                }
            });
            
            if (allMessageIds.length > 0) {
                // console.log(`–ó–∞–ø—Ä–æ—Å —Å—Ç–∞—Ç—É—Å–æ–≤ –ø—Ä–æ—á—Ç–µ–Ω–∏—è –¥–ª—è —Å–æ–æ–±—â–µ–Ω–∏–π: ${allMessageIds.join(',')}`);
                $.get(`/Chat/GetMessagesReadStatus?messageIds=${allMessageIds.join(',')}`, function(data) {
                    // console.log('–ü–æ–ª—É—á–µ–Ω—ã —Å—Ç–∞—Ç—É—Å—ã –ø—Ä–æ—á—Ç–µ–Ω–∏—è:', data);
                    data.forEach(status => updateSingleMessageStatus(status.messageId, status.isRead));
                }).fail(function(error) {
                    // console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å—Ç–∞—Ç—É—Å–æ–≤ –ø—Ä–æ—á—Ç–µ–Ω–∏—è:', error);
                });
            }

            markVisibleMessagesAsRead();
            $("#messagesList").on("scroll", function() { markVisibleMessagesAsRead(); });
        });

        // --- –ì–∞–ª–æ—á–∫–∞ "–ø—Ä–æ—á–∏—Ç–∞–Ω–æ" ---
        let readStatusCache = new Map();
        let lastUpdateTime = 0;
        const UPDATE_INTERVAL = 2000; // 2 —Å–µ–∫—É–Ω–¥—ã –º–µ–∂–¥—É –æ–±–Ω–æ–≤–ª–µ–Ω–∏—è–º–∏

        function updateReadStatus() {
            const now = Date.now();
            if (now - lastUpdateTime < UPDATE_INTERVAL) return;
            lastUpdateTime = now;

            const unreadMessages = [];
            $(".my-message").each(function() {
                const msgId = $(this).data("message-id");
                const $status = $(this).find(".message-status");
                if ($status.find('.read-status').length === 0 && !readStatusCache.has(msgId)) {
                    unreadMessages.push(msgId);
                }
            });

            if (unreadMessages.length > 0) {
                // console.log(`–ü–µ—Ä–∏–æ–¥–∏—á–µ—Å–∫–æ–µ –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–æ–≤ –¥–ª—è —Å–æ–æ–±—â–µ–Ω–∏–π: ${unreadMessages.join(', ')}`);
                $.get(`/Chat/GetMessagesReadStatus?messageIds=${unreadMessages.join(',')}`, function(data) {
                    // console.log('–ü–æ–ª—É—á–µ–Ω—ã —Å—Ç–∞—Ç—É—Å—ã –ø—Ä–æ—á—Ç–µ–Ω–∏—è:', data);
                    data.forEach(status => updateSingleMessageStatus(status.messageId, status.isRead));
                }).fail(function(error) {
                    // console.error('–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–æ–ª—É—á–µ–Ω–∏–∏ —Å—Ç–∞—Ç—É—Å–æ–≤ –ø—Ä–æ—á—Ç–µ–Ω–∏—è:', error);
                });
            }
        }

        $(function() { 
            updateReadStatus();
            setInterval(updateReadStatus, UPDATE_INTERVAL);
        });

        // --- SignalR: –æ–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Å—Ç–∞—Ç—É—Å–∞ –ø—Ä–æ—á—Ç–µ–Ω–∏—è ---
        connection.on("MessageRead", function(msgChatId, msgId, readUserId) {
            // console.log(`–ü–æ–ª—É—á–µ–Ω–æ —Å–æ–±—ã—Ç–∏–µ –ø—Ä–æ—á—Ç–µ–Ω–∏—è: —á–∞—Ç ${msgChatId}, —Å–æ–æ–±—â–µ–Ω–∏–µ ${msgId}, –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å ${readUserId}`);
            if (msgChatId == chatId) {
                updateSingleMessageStatus(msgId, true);
            }
        });

        // –û—Ç–∫—Ä—ã—Ç—å —Ñ–æ—Ä–º—É –ø–µ—Ä–µ–∏–º–µ–Ω–æ–≤–∞–Ω–∏—è
        $('#editGroupNameBtn').on('click', function() {
            $('#renameGroupChatForm').show();
            $('#newGroupName').val($('#groupChatTitle').text()).focus();
            $(this).hide();
        });
        // –û—Ç–º–µ–Ω–∞
        $('#cancelRenameBtn').on('click', function() {
            $('#renameGroupChatForm').hide();
            $('#editGroupNameBtn').show();
        });
        // –°–æ—Ö—Ä–∞–Ω–∏—Ç—å –Ω–æ–≤–æ–µ –∏–º—è
        $('#renameGroupChatForm').on('submit', function(e) {
            e.preventDefault();
            var newName = $('#newGroupName').val().trim();
            if (!newName) return;
            $.post('/Chat/RenameGroup', { chatId: chatId, newName: newName }, function(data) {
                if (data.success) {
                    $('#groupChatTitle').text(newName);
                    $('#renameGroupChatForm').hide();
                    $('#editGroupNameBtn').show();
                } else {
                    alert(data.error || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –ø–µ—Ä–µ–∏–º–µ–Ω–æ–≤–∞–Ω–∏–∏!');
                }
            });
        });
    </script>
