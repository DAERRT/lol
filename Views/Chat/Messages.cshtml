                        connection.invoke("SendMessageToChat", chatId, userId, text || '[–§–∞–π–ª]');
                        loadMessages && loadMessages();
                    } else {
                        alert(data.error || '–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ —Ñ–∞–π–ª–æ–≤!');
                    }
                })
                .catch(() => alert('–û—à–∏–±–∫–∞ –ø—Ä–∏ –æ—Ç–ø—Ä–∞–≤–∫–µ —Ñ–∞–π–ª–æ–≤!'));
