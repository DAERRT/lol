            updateSearchCount();
            highlightCurrentSearch();
        });
        // –°–±—Ä–æ—Å –ø–æ–∏—Å–∫–∞ –ø—Ä–∏ —Å–º–µ–Ω–µ —á–∞—Ç–∞
        $(function() {
            $('#searchBox').addClass('d-none');
            $('#searchInput').val('');
            updateSearchHighlights('');
        });

        // --- –û—Ç–≤–µ—Ç –Ω–∞ —Å–æ–æ–±—â–µ–Ω–∏–µ ---
        let replyToId = null;
