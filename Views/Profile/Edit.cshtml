@model lol.Models.ApplicationUser
@{
    ViewData["Title"] = "Редактирование профиля";
}
<h2>Редактирование профиля</h2>
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
@if (!string.IsNullOrEmpty(Model.AvatarPath))
{
    <div class="mb-3">
        <img src="@Model.AvatarPath" alt="Аватарка" style="max-width: 120px; max-height: 120px; border-radius: 50%; border: 1px solid #ccc;" />
    </div>
}
<form asp-action="UploadAvatar" method="post" enctype="multipart/form-data" class="mb-3">
    <div class="form-group">
        <label>Загрузить новую аватарку</label>
        <input type="file" name="avatar" class="form-control" accept="image/*" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Загрузить</button>
</form>
<form asp-action="Edit" method="post">
    <div class="form-group mb-3">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Group"></label>
        <input asp-for="Group" class="form-control" />
        <span asp-validation-for="Group" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary">Отмена</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 