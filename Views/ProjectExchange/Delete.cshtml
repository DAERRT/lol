@model lol.Models.ProjectExchange
@{
    ViewData["Title"] = "Удалить биржу";
}
<h2>Удалить биржу</h2>
<div>
    <h4>Вы уверены, что хотите удалить биржу "@Model.Name"?</h4>
    <dl class="row">
        <dt class="col-sm-2">Период</dt>
        <dd class="col-sm-10">@Model.StartDate.ToShortDateString() - @Model.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Статус</dt>
        <dd class="col-sm-10">@((Model.IsActive ? "Активная" : "Неактивная"))</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Удалить</button>
        <a asp-controller="Admin" asp-action="ProjectExchanges" class="btn btn-secondary">Отмена</a>
    </form>
</div> 