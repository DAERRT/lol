@model IEnumerable<lol.Models.Project>

@{
    ViewData["Title"] = "Проекты для экспертизы";
}

<h2>Проекты для экспертизы</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Нет проектов, требующих экспертизы.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdeaName)</th>
                    <th>@Html.DisplayNameFor(model => model.Customer)</th>
                    <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdeaName</td>
                        <td>@item.Customer</td>
                        <td>@item.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>
                            <a asp-action="Review" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Оценить</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<div class="mt-3">
    <a asp-action="History" class="btn btn-secondary">История оценок</a>
</div> 