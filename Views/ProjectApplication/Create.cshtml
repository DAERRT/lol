@model dynamic
@{
    ViewData["Title"] = "Подача заявки на проект";
}
<h2>Подача заявки на проект</h2>
<form asp-action="Create" method="post">
    <input type="hidden" name="projectId" value="@ViewBag.ProjectId" />
    <div class="form-group mb-3">
        <label for="teamId">Выберите команду:</label>
        <select name="teamId" class="form-control" required>
            <option value="">-- Выберите команду --</option>
            @foreach (var team in (SelectList)ViewBag.Teams)
            {
                <option value="@team.Value">@team.Text</option>
            }
        </select>
    </div>
    <div class="form-group mb-3">
        <label for="message">Комментарий (необязательно):</label>
        <textarea name="message" class="form-control" rows="3"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Подать заявку</button>
    <a asp-controller="Project" asp-action="Index" class="btn btn-secondary">Назад к проектам</a>
</form> 